
@model Pizza



<div class="container">
    <form asp-controller="Home" asp-action="FormAddPizza" method="post">
        @Html.AntiForgeryToken()
        <div class="text-center">Inserisci una nuova pizza: </div>
        <div class="mb-3">
            <strong>Nome:</strong>
            <input asp-for="Nome" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <strong>Prezzo:</strong>
            <input asp-for="Prezzo" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <strong>Descrizione:</strong>
            <input asp-for="Descrizione" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <strong>Immagine:</strong>
            <input asp-for="Immagine" class="d-block w-100" />
        </div>
        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Salva la nuova Pizza!">
        </div>
    </form>
</div>
    </main>